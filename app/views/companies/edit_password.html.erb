<div class="vehicle_screen">
  	<div class="row">
	    <div class="col-xl-6 col-md-6">
	      <%= link_to root_path do %><span class="back_text"><img src="<%= asset_path('right_arrow.png') %>" alt="right_arrow">&nbsp;Edit Organisation</span><% end %>
	    </div>
	    <div class="col-xl-6 col-md-6">
	      <%= link_to destroy_company_session_path, method: :delete do %><img src="<%= asset_path('logout.png') %>" alt="logout" class="logout_btn"><% end %>
	    </div>
  	</div><br>
  	<div class="row">
	    <% if flash[:success] %>
	        <div class="success_msg" id=""><%= flash[:success] %></div>
	    <% end %>
	    <% if flash[:error] %>
	        <div class="error_msg" id=""><%= flash[:error] %></div>
	    <% end %>
  	</div>
  	<%= form_tag update_password_path do %>
  		<div class="form-group">
	        <label for="exampleInputName">Old Password</label>
	        <%= password_field_tag "password", "", class: "form-control border_line", id: "company_old_password" %>
	             <span id="company_old_password_err" class="text-danger"></span>
	     </div>
	     <div class="form-group">
	        <label for="exampleInputName">New Password</label>
	        <%= password_field_tag "re_type_password", "", class: "form-control border_line", id: "company_password" %>
	             <span id="company_password_err" class="text-danger"></span>
	     </div>
	     <div class="form-group">
	        <label for="exampleInputName">Confirm Password</label>
	        <%= password_field_tag "confirmation_password", "", class: "form-control border_line", id: "company_confirm_password" %>
	        <span id="company_confirm_password_err" class="text-danger"></span>
	     </div>
		<%= submit_tag "Submit", class: "btn btn-primary btn-block", onclick: "return ForgetPasswordForm()", id: "new_btn" %>
  	<% end %>
</div>
<script type="text/javascript">
    function ForgetPasswordForm() {
    	old_password = $('#company_old_password').val();
    	password = $('#company_password').val();
        confirm_password = $('#company_confirm_password').val();

        if(old_password == null || old_password == '') {
            $('#company_old_password_err').html('Old password is required');
            $('#company_old_password').focus();
            return false;
        }else{
            $('#company_old_password_err').html('')
        }

        if(password == null || password == '') {
            $('#company_password_err').html('Password is required');
            $('#company_password').focus();
            return false;
        }else{
            $('#company_password_err').html('')
        }

        if (password.length < 6){
            $('#company_password_err').html('Password should be 6-20 characters');
            $('#company_password').focus();
            return false;
        }else{
            $('#company_password_err').html('')
        }

        if (validatePassword(password)) {
        }else{
          $('#company_password_err').html('Password should be contain aleast one lower and upper case, one number and one special character.');
            $('#company_password').focus();
            return false;
        }

        if(confirm_password == null || confirm_password == '') {
            $('#company_confirm_password_err').html('Confirm Password is required');
            $('#company_confirm_password').focus();
            return false;
        }else{
            $('#company_confirm_password_err').html('')
        }

        if (confirm_password.length < 6){
            $('#company_confirm_password_err').html('Confirm Password should be 6-20 characters');
            $('#company_confirm_password').focus();
            return false;
        }else{
            $('#company_confirm_password_err').html('')
        }

        if (password == confirm_password){
            $('#company_confirm_password_err').html('')
        }else {
            $('#company_confirm_password_err').html('Password and Confirm Password do not match');
            $('#company_confirm_password').focus();
            return false;
        }

    }
</script>